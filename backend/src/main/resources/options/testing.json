      "required": true,
      "values": [
        {
          "id": "korean-descriptive",
          "label": "한글 서술형",
          "description": "사용자가_로그인하면_토큰을_반환한다()",
          "example": "@Test void 사용자가_로그인하면_토큰을_반환한다()"
        },
        {
          "id": "given-when-then",
          "label": "Given-When-Then",
          "description": "givenUser_whenLogin_thenReturnToken()",
          "example": "@Test void givenValidUser_whenLogin_thenReturnToken()"
        },
        {
          "id": "should-when",
          "label": "Should-When",
          "description": "shouldReturnToken_whenUserLogin()",
          "example": "@Test void shouldReturnToken_whenValidUserLogin()"
        },
        {
          "id": "method-scenario-expected",
          "label": "Method_Scenario_Expected",
          "description": "login_validCredentials_returnsToken()",
          "example": "@Test void login_validCredentials_returnsToken()"
        },
        {
          "id": "display-name",
          "label": "@DisplayName 활용",
          "description": "@DisplayName(\"사용자 로그인 시 토큰 반환\")",
          "example": "@DisplayName(\"사용자 로그인 시 토큰 반환\") @Test void test()"
