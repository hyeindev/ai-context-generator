        { "id": "testify", "label": "Testify", "description": "Go 테스트 확장" },
        { "id": "rust-test", "label": "Rust Test", "description": "Rust 내장 테스트" },
        { "id": "proptest", "label": "Proptest", "description": "Rust 속성 기반 테스트" }
