    {
      "id": "mockFramework",
      "label": "Mocking 프레임워크",
      "type": "select",
      "required": false,
      "dependsOn": {
        "field": "language",
        "mapping": {
          "java": ["mockito", "mockk"],
          "kotlin": ["mockk", "mockito"],
          "typescript": ["jest-mock", "sinon"],
          "python": ["unittest-mock", "pytest-mock"]
        }
      },
      "values": [
        { "id": "mockito", "label": "Mockito", "description": "Java 표준 Mocking" },
        { "id": "mockk", "label": "MockK", "description": "Kotlin 네이티브 Mocking" },
        { "id": "jest-mock", "label": "Jest Mock", "description": "Jest 내장 Mocking" },
        { "id": "sinon", "label": "Sinon", "description": "JS Standalone Mocking" },
        { "id": "unittest-mock", "label": "unittest.mock", "description": "Python 표준 Mocking" },
        { "id": "pytest-mock", "label": "pytest-mock", "description": "pytest Mocking 플러그인" }
      ]
